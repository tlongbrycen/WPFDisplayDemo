<Window x:Class="WPFDisplayDemo.View.ThermalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDisplayDemo.View"
        xmlns:viewModel="clr-namespace:WPFDisplayDemo.ViewModel"
        mc:Ignorable="d"
        Title="ThermalWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:ThermalWindowViewModel></viewModel:ThermalWindowViewModel>
    </Window.DataContext>

    <Grid>
        <Image x:Name="Image" Source="{Binding imgSource}">
        </Image>
    </Grid>
</Window>
